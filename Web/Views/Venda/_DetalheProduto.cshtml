@model Dominio.Produto

<!-- Modal Structure -->
<div class="modal-content">
    @if (Model == null)
    {
        <h4 class="center">Produto Não Encontrado</h4>
    }
    else
    {
        <h4 class="truncate">@Model.Nome</h4>
            <hr />
            <div class="row">
                <div class="col s12 m12 l4">
                    <img class="img-produto" src="@Url.Content(Model.UrlImagem)" />
                </div>
                <div class="col s12 m12 l8 detalhe-produto">
                    <div class="row">
                        <div class="col s12">
                            <span>Preço: R$ @Model.Preco.ToString("N2")</span>
                        </div>
                        <div class="col s12">
                            <span>Peso: @Model.Peso g</span>
                        </div>
                        <div class="col s12">
                            <span>Referência: @Model.Referencia</span>
                        </div>
                        <div class="col s12">
                            <span>Unidades restantes: @Model.QuantidadeEmEstoque</span>
                        </div>
                    </div>
                </div>
            </div>
    }
</div>
<div class="modal-footer">
    @if (Model != null && Model.QuantidadeEmEstoque > 0)
    {
        <a IdProduto="@Model.IdProduto" class="modal-action waves-effect btn btn-detalhe-comprar">Comprar</a>
    }
    <a href="javascript:fecharModal();" class="modal-action modal-close waves-effect btn btn-gray">Fechar</a>
</div>
