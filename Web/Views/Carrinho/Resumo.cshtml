@model Dominio.PedidoCliente
@{
    
}

<h4>Resumo</h4>
<hr />
<h4>Dados de Entrega</h4>
<p>
    <b>Endereço: </b> @Model.EnderecoEntrega.Rua, @Model.EnderecoEntrega.Numero <br />
    <b>Cidade: </b> @Model.EnderecoEntrega.Cidade.Nome <br />
    <b>CEP: </b> @Model.EnderecoEntrega.CEP.ToString().PadLeft(8, '0')
</p>
<hr />
<h4>Produtos</h4>
<p>
    @foreach (var item in Model.Produtos)
    {
        @($"({item.Quantidade}x) {item.Produto.Nome} - R$ {item.Produto.Preco.ToString("N2")}") <br />
    }
</p>
<hr />
<h4>Total</h4>
<p>
    R$ @ViewBag.ValorTotalPedido.ToString("N2")
</p>
<div class="row">
    <div class="col s12">
        <button id="btnConfirmaCompra" type="button" class="waves-effect waves-light btn right" title="Confirmar compra">Confirmar compra</button>
    </div>
</div>

@Scripts.Render("~/Scripts/carrinho")