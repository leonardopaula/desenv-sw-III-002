@model List<Dominio.Produto>

<h4>Carrinho</h4>

<div class="row">
@if (Model.Count == 0)
{
    <div class="col s12 m12 l12">
        <div class="card-panel grey lighten-2 center">
            <span class="black-text">
                O carrinho está vazio
            </span>
        </div>
    </div>
}
else
{
    <div class="col s12 m12 l12">
        <span class="total-carrinho">Total: @Model.Sum(x => x.Preco).ToString("N2")</span>
    </div>

    foreach (var item in Model)
    {
        <div class="col s12 m12 l12">
            <div class="card horizontal">
                <div class="card-stacked">
                    <div class="card-content">
                        <p>@item.Nome - R$ @item.Preco.ToString("N2")</p>
                    </div>
                    <div class="card-action">
                        <a href="#">Remover</a>
                    </div>
                </div>
            </div>
        </div>
    }
}
</div>